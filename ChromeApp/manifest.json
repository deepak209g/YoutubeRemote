{
  "name": "Hello World!",
  "description": "My first Chrome App.",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    "webview",
    "system.network",
    "https://www.youtube.com/"
  ],
  "sockets": {
    "tcp": {
      "connect": "*"
    },
    "tcpServer": {
      "listen": "*"
    }
  },
  "icons": {
    "16": "icons/calculator-16.png",
    "128": "icons/calculator-128.png"
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ]
  }
}